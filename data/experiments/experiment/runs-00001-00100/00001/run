#! /usr/bin/env python

import logging
import os
import platform

from lab.calls.call import Call
from lab import tools

tools.configure_logging()

logging.info(f"node: {platform.node()}")

run_log = open("run.log", "w")
run_err = open("run.err", "w", buffering=1)  # line buffering
redirects = {"stdout": run_log, "stderr": run_err}

# Make sure we're in the run directory.
os.chdir(os.path.dirname(os.path.abspath(__file__)))

Call(['/home/giulio/Documents/Projects/decision-trees-asp/data/experiments/venv/bin/python', '/home/giulio/Documents/Projects/decision-trees-asp/data/experiments/sync_runner.py', '--in-file', '/home/giulio/Documents/Projects/decision-trees-asp/data/experiments/tmp/chunks/sync_runner_0.json', '--out-file', '/home/giulio/Documents/Projects/decision-trees-asp/data/experiments/tmp/results/sync_runner_0.csv'], hard_stderr_limit=1048576, hard_stdout_limit=1048576, memory_limit=None, name='sync_runner', soft_stderr_limit=64, soft_stdout_limit=1024, time_limit=None, **redirects).wait()


for f in [run_log, run_err]:
    f.close()
    if os.path.getsize(f.name) == 0:
        os.remove(f.name)
